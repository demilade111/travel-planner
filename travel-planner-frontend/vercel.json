{
  "version": 2,
  "root": "travel-planner-frontend",
  "build": {
    "command": "npm install --force && npm run build",
    "outputDirectory": "dist"
  },
  "framework": "vite",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/"
    }
  ]
}
